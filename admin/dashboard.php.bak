// =============================================
// STATISTIK DETAIL
// =============================================

// Distribusi Siswa per Kelas
$query_siswa_per_kelas = "
    SELECT 
        k.nama_kelas,
        COUNT(u.id) as jumlah_siswa
    FROM kelas k
    LEFT JOIN users u ON k.id = u.kelas_id AND u.role = 'siswa' AND u.is_active = 1
    GROUP BY k.id, k.nama_kelas
    ORDER BY k.nama_kelas
    LIMIT 10
";
$result_siswa_per_kelas = mysqli_query($conn, $query_siswa_per_kelas);

// Distribusi Siswa per Jurusan (join via kelas)
$query_siswa_per_jurusan = "
    SELECT 
        j.nama_jurusan,
        j.singkatan,
        COUNT(u.id) as jumlah_siswa
    FROM jurusan j
    LEFT JOIN kelas k ON k.jurusan_id = j.id
    LEFT JOIN users u ON u.kelas_id = k.id AND u.role = 'siswa' AND u.is_active = 1
    GROUP BY j.id, j.nama_jurusan, j.singkatan
    ORDER BY jumlah_siswa DESC
";
$result_siswa_per_jurusan = mysqli_query($conn, $query_siswa_per_jurusan);

// Guru dengan Assignment Terbanyak (gunakan NUPTK sesuai skema)
$query_guru_top = "
    SELECT 
        u.nama_lengkap,
        u.nuptk,
        COUNT(ag.id) as total_assignment
    FROM users u
    LEFT JOIN assignment_guru ag ON u.id = ag.guru_id
    WHERE u.role = 'guru' AND u.is_active = 1
    GROUP BY u.id, u.nama_lengkap, u.nuptk
    ORDER BY total_assignment DESC
    LIMIT 5
";
$result_guru_top = mysqli_query($conn, $query_guru_top);

